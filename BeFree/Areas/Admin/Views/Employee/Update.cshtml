@using BeFree.Areas.Admin.ViewModels;
@using BeFree.Areas.Admin.ViewModels.Employee;
@using BeFree.Models;
@model EmployeeUpdateVM

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Employee Update</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname">Surname</label>
                    <input asp-for="Surname" class="form-control" placeholder="Surname">
                    <span asp-validation-for="Surname"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Photo">Photo Upload</label>
                    <input asp-for="Photo" class="form-control" placeholder="Photo" accept="image/*">
                    <span class="text-danger" asp-validation-for="Photo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Facebook">Facebook</label>
                    <input asp-for="Facebook" class="form-control" placeholder="Facebook">
                    <span asp-validation-for="Facebook"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Twitter">Twitter</label>
                    <input asp-for="Twitter" class="form-control" placeholder="Twitter">
                    <span asp-validation-for="Twitter"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GooglePlus">GooglePlus</label>
                    <input asp-for="GooglePlus" class="form-control" placeholder="GooglePlus">
                    <span asp-validation-for="GooglePlus"></span>
                </div>
                <div class="form-group">
                    <select asp-for="PositionId" asp-items="new SelectList(Model.Positions,nameof(Position.Id),nameof(Position.Name))">
                        <option asp-for="Name" disabled selected value="PositionId" placeholder="Name">Choose Position</option>
                    </select>
                    <span class="text-danger" asp-validation-for="PositionId"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <a asp-action="index" asp-controller="employee" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>