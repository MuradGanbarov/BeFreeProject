@using BeFree.Areas.Admin.ViewModels.Pagination;
@using BeFree.Models;
@model PaginationVM<Employee>

@{
    int count = (Model.CurrentPage - 1) * 3;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Employee Table</h4>
            <a class="btn btn-success" asp-action="create" asp-controller="employee">Create New Employee</a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Surname
                            </th>
                            <th>
                                Facebook
                            </th>
                            <th>
                                Instagram
                            </th>
                            <th>
                                GooglePlus
                            </th>
                            <th>
                                Position
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Employee employee in Model.Items)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    <img src ="~/assets/img/@employee.ImageURL"/>
                                </td>
                                <td>
                                    @employee.Name
                                </td>
                                <td>
                                    @employee.Surname
                                </td>
                                <td>
                                    @employee.Facebook
                                </td>
                                <td>
                                    @employee.Twitter
                                </td>
                                <td>
                                    @employee.GooglePlus
                                </td>
                                <td>
                                    @employee.Position.Name
                                </td>
                                <td>
                                    <a class="btn btn-warning" asp-action="Update" asp-controller="employee" asp-route-id="@employee.Id"><i class="mdi mdi-border-color"></i></a>
                                    <a class="btn btn-warning" asp-action="delete" asp-controller="employee" asp-route-id="@employee.Id"><i class="mdi mdi-delete"></i></a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item @(Model.CurrentPage-1<=0?"disabled":"")"><a class="page-link" asp-route-page="@(Model.CurrentPage-2)" asp-action="Index" asp-controller="employee">Previous</a></li>
                        @for (int i = 1; i <= Model.TotalPage; i++)
                        {
                            <li class="page-item @(i==Model.CurrentPage?"disabled":"")"><a class="page-link" asp-route-page="@(i-1)" asp-action="Index" asp-controller="employee">@i</a></li>

                        }
                        <li class="page-item @(Model.CurrentPage==Model.TotalPage?"disabled":"")"><a class="page-link" asp-route-page="@(Model.CurrentPage)" asp-action="Index" asp-controller="employee">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>