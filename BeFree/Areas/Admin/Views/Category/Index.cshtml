@using BeFree.Areas.Admin.ViewModels.Pagination;
@using BeFree.Models;
@model PaginationVM<Category>

@{
    int count = (Model.CurrentPage - 1) * 3;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Category Table</h4>
            <a asp-action="create" asp-controller="category"></a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Category
                            </th>
                            <th>
                                Product's Count
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(Category category in Model.Items)
                        {
                            count++;
                            <tr>
                                @count
                                <td>
                                    @category.Name
                                </td>
                                <td>
                                    @category.Products.Count
                                </td>
                                <td>
                                    <a class="btn btn-warning" asp-action="Update" asp-controller="Category" asp-route-id="@category.Id"><i class="mdi mdi-border-color"></i></a>
                                    <a class="btn btn-warning" asp-action="delete" asp-controller="Category" asp-route-id="@category.Id"><i class="mdi mdi-delete"></i></a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item @(Model.CurrentPage-1<=0?"disabled":"")"><a class="page-link" asp-route-page="@(Model.CurrentPage-2)" asp-action="Index" asp-controller="category">Previous</a></li>
                        @for(int i = 1; i <= Model.TotalPage; i++)
                        {
                            <li class="page-item @(Model.CurrentPage==Model.TotalPage?"disabled":"")"><a class="page-link" asp-route-page="@(i-1)"asp-action="Index" asp-controller="category">@i</a></li>

                        }
                        <li class="page-item @(Model.CurrentPage==Model.TotalPage?"disabled":"")"><a class="page-link" asp-route-page="@(Model.CurrentPage)" asp-action="Index" asp-controller="category">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>